{
  "coc.preferences.extensionUpdateCheck": "daily",
  "suggest.noselect": false,
  "suggest.enablePreselect": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.snippetIndicator": " ►",
  
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.hintSign": "➤",
  
  "completion.enableHighlights": true,
  "codeLens.enable": true,
  
  "signature.enable": true,
  "signature.target": "float",
  
  "hover.floatConfig": {
    "border": true,
    "rounded": true
  },
  
  "inlayHint.enable": true,
  
  "typescript.preferences.noSemicolons": false,
  "typescript.format.enabled": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  
  "python.defaultInterpreter": "python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  
  "java.home": "",
  "java.configuration.runtimes": [],
  
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  
  "xml.validation.enabled": true,
  "xml.completion.autoCloseTags": true,
  "xml.format.enabled": true,
  
  "prettier.enable": true,
  "prettier.semi": true,
  "prettier.singleQuote": false,
  "prettier.tabWidth": 2,
  
  "eslint.enable": true,
  "eslint.autoFixOnSave": true,
  
  "snippets.extends": {
    "cpp": ["c"],
    "typescript": ["javascript"],
    "xml": ["html"]
  },
  
  "git.enableGutters": true,
  "git.addGBlameToBufferVar": true,
  
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  
  "list.normalMappings": {
    "d": "do:delete"
  },
  
  "languageserver": {
    "lua": {
      "command": "lua-language-server",
      "filetypes": ["lua"],
      "settings": {
        "Lua": {
          "diagnostics": {
            "globals": ["vim"]
          },
          "workspace": {
            "library": {
              "$VIMRUNTIME/lua": true,
              "$VIMRUNTIME/lua/vim": true,
              "$VIMRUNTIME/lua/vim/lsp": true
            }
          }
        }
      }
    }
  }
}
